<%- include('./partials/header'); %>
<section class="home">
</section>


<div class="container mt-5">
  <div class="card mb-3" style="width: 100%;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="/<%= wits.imageUrl %>" class="card-img" alt="..." style="object-fit: cover;">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title h2"><%= wits.title %></h5>
          <p class="card-text"><%= wits.description %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-3 border-0" style="width: 100%;">
    <div class="row no-gutters ">
      <div class="col-md-4">
        
      <% if (userId.length > 0) { %>
        <form id="comment" method="POST" action="/wits/comment">
          <div class="form-group p-3 ">
            <input type="hidden" name="wits_id" id="id" value="<%= wits._id %>">
            <textarea class=" shadow p-3 mb-5 bg-white rounded h5" name="comment" id="comm" rows="6" placeholder="Your Comment"></textarea>
            <input class="btn btn-success font-weight-bold "type="submit">  
        </div> 
      </form> 
        <form>
          <div class="form-group p-3 ">
          <button id="like" class=" btn btn-success font-weight-bold "type="submit" value=""> &#128077;&#127996;<span id="likeUp"></span></button> 
          </div>
        </form>
    <% } else { %>
        <a class="font-weight-bold" href="/users/login">login to comment</a>
    <% } %>
      
    </div>
      <div class="col-md-8">
        <div class="card-body border-0" id="resultComm"  >
          <% for (const comment of wits.comment) { %>
            <div class=" shadow p-2 mb-3 bg-white rounded">
            <h5 class="card-title h4 text-success p-1"><%= comment.userName %></h5>
            <p class="card-text p-1"><%= comment.date %></p>
            <p class="card-text p-1"><%= comment.comment %></p>
         </div>
         <%}%>
        </div>
      </div>
    </div>
  </div>
</div>



<%- include('./partials/footer'); %>