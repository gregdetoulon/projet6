<%- include('./partials/header'); %>

<section class="home">
</section>
<div class="my-5">
  <h2 class="myH2">What is this place?</h2>
  <p class="myP">The social network for lovers of discovery, nature and cultural places!</p>
</div>


<div class="container h-100">
  <div class="d-flex justify-content-center h-100">
      <form class="searchbar" action="/wits/search" method="post">
        <input onchange="this.value = this.value.charAt(0).toUpperCase() + this.value.substr(1);" class="search_input"  autocomplete="off" type="text" name="search" placeholder="Search Wit">
        <button type="submit" class="search_icon"><i class="fas fa-search"></i></button>
      </form>
  </div>
</div>


<div class=" d-flex align-content-between justify-content-center flex-wrap">
  <% for (let i = 0; i < wits.length; i++) { %>
  <a href="/wits/details/<%= wits[i]._id %>" class="text-decoration-none text-dark" >
  <div class="card m-3">
    <img src="<%= wits[i].imageUrl %>" class="card-img-top" alt="place picture" style="object-fit: cover;">
    <div class="card-body overflow-hidden">
      <h3 class="card-title font-weight-bold"><%= wits[i].title %></h3>  
    </div> 
  </div>
  </a>
  <%}%>
</div>





<%- include('./partials/footer'); %>
